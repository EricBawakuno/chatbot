<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Chat Bot</title>
    <style>
        #chat-container {
            max-width: 400px;
            margin: 0 auto;
        }

        #chat-log {
            height: 300px;
            overflow-y: scroll;
            border: 1px solid #ccc;
            padding: 10px;
        }

        #user-input {
            width: 100%;
            padding: 10px;
        }

        #submit-btn {
            width: 100%;
            padding: 10px;
            background-color: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div id="chat-container">
        <div id="chat-log"></div>
        <input type="text" id="user-input" placeholder="Type your message...">
        <button id="submit-btn">Send</button>
    </div>

    <script>
        const OpenAIUrl = 'https://api.openai.com/v1/chat/completions';
        const OpenAIKey = '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';

        const chatLog = document.getElementById('chat-log');
        const userInput = document.getElementById('user-input');
        const submitBtn = document.getElementById('submit-btn');

        submitBtn.addEventListener('click', sendMessage);

        async function sendMessage() {
            const message = userInput.value;

            if (message.trim() !== '') {
                displayMessage('user', message);

                userInput.value = '';
                userInput.disabled = true;
                submitBtn.disabled = true;

                const response = await getOpenAIResponse(message);
                const botReply = response.choices[0].message.content;
                displayMessage('bot', botReply);

                userInput.disabled = false;
                submitBtn.disabled = false;
            }
        }

        async function getOpenAIResponse(message) {
            const requestOptions = {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Authorization': `Bearer ${OpenAIKey}`
                },
                body: JSON.stringify({
                    model: 'gpt-3.5-turbo',
                    messages: [{ role: 'system', content: 'You are a helpful assistant.' }, { role: 'user', content: message }]
                })
            };

            const response = await fetch(OpenAIUrl, requestOptions);
            const data = await response.json();

            return data;
        }

        function displayMessage(role, content) {
            const messageElement = document.createElement('div');
            messageElement.classList.add(role === 'user' ? 'user-message' : 'bot-message');
            messageElement.innerText = content;

            chatLog.appendChild(messageElement);
            chatLog.scrollTop = chatLog.scrollHeight;
        }
    </script>
<script src="https://www.socialintents.com/api/socialintents.1.3.js#2c9fa6c3891972ed01892c94e80e14e6" async="async"></script>
</body>
</html>
